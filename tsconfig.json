{
  "compilerOptions": {
    "target": "ES2022",               // Modern JavaScript features
    "module": "CommonJS",             // Discord.js typically uses CommonJS
    "outDir": "./dist",               // Output directory for compiled JS
    "rootDir": "./src",               // Source directory (adjust if needed)
    "strict": true,                   // Enable all strict type-checking
    "esModuleInterop": true,          // Better compatibility with CommonJS/ES modules
    "skipLibCheck": true,             // Skip type-checking of library files (faster builds)
    "moduleResolution": "node",       // Required for Node.js/Discord.js
    "resolveJsonModule": true,        // Allow importing JSON (e.g., prefix_map.json)
    "forceConsistentCasingInFileNames": true, // Avoid case-sensitive bugs
    "noImplicitAny": false            // Relax type-checking for JS-like flexibility (optional)
  },
  "include": ["src/**/*.ts"],         // Include all TS files in `src/`
  "exclude": ["node_modules"]         // Exclude dependencies
}